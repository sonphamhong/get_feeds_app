.small-9.medium-9.columns
  %section#content
    %h1
      = "Artice List"
    %table{:width => "100%"}
      %thead
        %th.text-center
          = "Id"
        %th.text-center
          = "Image"
        %th.text-center
          = "Published"
        %th.text-center
          = "Edit"
        %th.text-center
          = "Delete"
      - if @feeds.present?
        - @feeds.each do |feed|
          %tr
            %td.text-center
              = feed.id
            %td.text-center
              = image_tag feed.picture, size: "100x100" if feed.picture.present?
            %td.text-center
              .switch.radius.round.large
                %input{:type => "checkbox", :name => "switch_article_#{feed.id}", :id => "published_switch_#{feed.id}", :checked => feed.published}
                  %label{:for => "published_switch_#{feed.id}"}
                %input.published_switch_url{type: :hidden, value: admin_update_published_switch_path({id: feed.id}) }
            %td.text-center
              = link_to "Edit", edit_admin_feed_path(feed)
            %td.text-center
              %button{:link => admin_feed_path(feed), :class => "button small radius del_artice_button"}
                = "Delete"

